extends layout

block css
    link(rel='stylesheet', href='/stylesheets/show_file.css')

block content
    .wrap
        h1.title #{title}
        br
        .innerwrap
            if user
                form(action="#").js-update-form
                    input(type="hidden" name="_method" value="PUT")
                    .button-wrap
                        button(type="submit" class="js-edit-button edit-button") 업데이트 요청
                    textarea(name="content").js-textarea #{content}
                    input(type="hidden" name="title" value="#{title}")
            
            else
                textarea(readonly value="") #{content}

            a(class="go-back-home" href="/")
                | 홈으로..

block script
    script(src='/vendor/jquery/jquery-3.2.1.min.js')
    script(src="/javascripts/show_file.js")
